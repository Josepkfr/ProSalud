<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/add" method="POST">
          <div class="form-group">
            <input type="text" name="cedula" value="<%= data.cedula%>" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="nombre" value="<%= data.nombre%>" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="direccion" value="<%= data.direccion%>" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="telefono" value="<%= data.telefono%>" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="email" value="<%= data.email%>" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="password" value="<%= data.password%>" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            save usuario
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
