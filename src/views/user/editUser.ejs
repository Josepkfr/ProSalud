<%- include('../components/header'); %>
<div class="container">
  <div class="into">
    <div class="rinto">
      <div class="row">
        <div class="col-md-4 mx-auto">
          <div class="card mt-5">
            <div class="card-header">
              <h3><%=edit.nombre%></h3>
            </div>
            <div class="card card-body">
              <form action="/user/edit/<%=edit.cedula%>" method="post">
                <div class="form-group">
                  <input
                    type="text"
                    name="cedula"
                    class="form-control"
                    placeholder="cedula"
                    value="<%=edit.cedula%>"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="text"
                    name="nombre"
                    class="form-control"
                    placeholder="Nombre"
                    value="<%=edit.nombre%>"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="text"
                    name="direccion"
                    class="form-control"
                    placeholder="Direccion"
                    value="<%=edit.direccion%>"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="tel"
                    name="telefono"
                    class="form-control"
                    placeholder="Telefono"
                    value="<%=edit.telefono%>"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="email"
                    name="email"
                    class="form-control"
                    placeholder="Email"
                    value="<%=edit.email%>"
                  />
                </div>
                <div class="form-group mt-2">
                  <button
                    class="btn btn-primary btn-block form-control"
                    type="submit"
                  >
                    Save
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../components/footer'); %>
